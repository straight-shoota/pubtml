<!DOCTYPE html>
<html lang="<%=@doc[:language]%>">
  <head>
    <title><%=@doc[:title]%></title>
    <meta charset="UTF-8" />
    <meta name="generator" content="pubtml" />
    <%# prince needs the old style charset definition %>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />

    <%= styles %>
  </head>
  <body class="language-markup">

  <section class="titlepage">
    <hgroup>
      <h1><%= @doc.title %></h1>
      <h2><%= @doc.author %></h2>
    </hgroup>
  </section>

  <div id="toc">
    <h2 class="notoc">Table of Contents</h2>
  </div>

  <%= import '' %>

  <%= scripts %>
  </body>
</html>
